{{#partial "contenido" }}

	<form method='get' action='/evento/alta'>
		<h1>Alta de Evento</h1>
		
		<h3>Ingresar descripcion</h3>
		<input name='Descripcion' value='{{descripcionIngresada}}'/>
		<h3>Elegir frecuencia</h3>
		<input type="radio" name="Frecuencia" value="Anual"> Anual<br>
		<input type="radio" name="Frecuencia" value="Diaria"> Diaria<br>
		<input type="radio" name="Frecuencia" value="Mensual"> Mensual<br>
		<input type="radio" name="Frecuencia" value="Semanal"> Semanal<br>
		<input type="radio" name="Frecuencia" value="UnicaVez"> Unica vez<br>
		
		<button type='submit'>Siguiente</button>
		<input type="reset"><br>
		
		{{#if eligieronDesYFrec}}
			{{> elegirHorarios.hbs}}
		{{/if}}
		
	</form>

{{/partial}}

{{> layout.hbs}}