<html>
<head>
<link rel="stylesheet" type="text/css" href="/inicioSesionStyle.css" media="screen" />
</head>
<body>

{{#partial "contenido" }}

	<form class="clothes-form" method='post' action='/eventos/alta'>
	<h1>Alta de Evento</h1>
	
	<div class="form-group">
		<h3>Ingresar descripcion</h3>
		<input name='Descripcion' class="form-control" value='{{descripcionIngresada}}' required></input>
	</div>
	
	<div class="form-group">
		<h3>Elegir frecuencia</h3>
		<select name="Frecuencia" class ="form-control">
			<option value="Anual" required> Anual</option>
			<option value="Diaria" required> Diaria</option>
			<option value="Mensual" required> Mensual</option>
			<option value="Semanal" required> Semanal</option>
			<option value="UnicaVez" required> Unica vez</option> <br/>
		</select>
	</div>
	
	<div class="form-group">
		<button type='submit' class="btn btn-primary">Siguiente</button>
		<input type="reset" class="btn btn-secondary"><br>
	</div>
	</form>

{{/partial}}

{{> layout.hbs}}

</body>
</html>