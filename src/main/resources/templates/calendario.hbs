{{#partial "contenido"}}
	<form class="profile-form" action="/calendario" method="GET">
		<input name='dia' value='{{dia}}'/>
		<input name='mes' value='{{mes}}'/>
		<input name='anio' value='{{anio}}'/>
		<button type='submit'>Eventos!</button>
	</form>	
	{{#if hayFecha}}
		<h2>Eventos</h2>
		{{#if haySugerencias}}
			{{#each haySugerencias}}
				<li>descripcion: {{this.evento.descripcion}}</li>
				<form method='post' action='/calendario'>
					<button type="submit">Confirmar</button>
				</form>
			{{/each}}
			{{#if eventos}}
    			{{#each eventos}}
    				<li>descripcion: {{this.descripcion}}</li>
    			{{/each}}
    		{{/if}}
    	{{else}}
    		<li>No se han encontrado eventos</li>
    	{{/if}}
	{{/if}}
	

{{/partial}}
{{>layout.hbs}}